# WADM Environment Configuration

# Application
APP_NAME=WADM
APP_VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# API
API_KEY=development_key_for_testing_only
ALLOWED_ORIGINS=["http://localhost:3000"]

# Database
MONGODB_URL=mongodb://wadm:wadm_secure_pass@localhost:27017/wadm?authSource=admin

# Redis
REDIS_URL=redis://localhost:6379/0

# Collector Configuration (24/7 Auto-start)
AUTO_START_COLLECTORS=true

# Updated Symbols - 2025-06-21
# All exchanges will track the same symbols (19 total)
# Reference + ISO20022 + RWA + AI
ALL_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,XRPUSDT,XLMUSDT,ALGOUSDT,ADAUSDT,HBARUSDT,QNTUSDT,LINKUSDT,POLYXUSDT,ONDOUSDT,TRUUSDT,FETUSDT,OCEANUSDT,AGIXUSDT,TAOUSDT,VIRTUALUSDT,ICPUSDT

# Each exchange uses the same symbols (format differences handled in code)
BYBIT_SYMBOLS=${ALL_SYMBOLS}
BINANCE_SYMBOLS=${ALL_SYMBOLS}
COINBASE_SYMBOLS=${ALL_SYMBOLS}
KRAKEN_SYMBOLS=${ALL_SYMBOLS}
COLLECTOR_STREAMS=trades,orderbook,klines

# WebSocket Configuration
WS_RECONNECT_INTERVAL=5
WS_PING_INTERVAL=30
WS_MAX_RECONNECT_ATTEMPTS=10

# Data Retention (seconds)
TRADES_RETENTION=36000
ORDERBOOK_RETENTION=86400
KLINES_1M_RETENTION=86400
KLINES_1H_RETENTION=604800

# Performance Settings
MAX_CONCURRENT_CONNECTIONS=10
BUFFER_SIZE=10000
BATCH_SIZE=1000

# MCP Settings
MCP_SERVER_NAME=wadm
MCP_SERVER_VERSION=0.1.0

# Exchange API Keys (optional - leave empty for public data only)
BYBIT_API_KEY=
BYBIT_API_SECRET=
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Symbol Categories (for reference) - 19 total
# Reference (3): BTC, ETH, SOL
# ISO20022 (6): XRP, XLM, ALGO, ADA, HBAR, QNT
# RWA/Tokenization (4): LINK, POLYX, ONDO, TRU
# AI (6): FET, OCEAN, AGIX, TAO, VIRTUAL, ICP
