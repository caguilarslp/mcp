# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=waickoff_mcp
MONGODB_CONNECT_TIMEOUT=10000
MONGODB_REQUEST_TIMEOUT=5000

# Storage Configuration
STORAGE_STRATEGY=mongo_first
ENABLE_STORAGE_FALLBACK=true
ENABLE_STORAGE_SYNC=true

# Bybit API Configuration
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_USE_TESTNET=false

# Trading Parameters
DEFAULT_RISK_PERCENT=2
MAX_POSITION_SIZE=1000
DEFAULT_GRID_COUNT=10

# Analysis Configuration
ENABLE_ADVANCED_ANALYSIS=true
VOLUME_DELTA_PRECISION=high
ENABLE_CONTEXT_MANAGER=true
CONTEXT_RETENTION_DAYS=90
MAX_CONTEXT_ENTRIES=10000

# Cache Configuration
ENABLE_LOCAL_CACHE=true
CACHE_DURATION_MINUTES=5

# Notifications (future)
DISCORD_WEBHOOK=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Logging
DEBUG_MODE=false
LOG_LEVEL=info

# Performance
ENABLE_PERFORMANCE_TRACKING=true
MAX_CONCURRENT_ANALYSES=5