{
  "name": "bybit-mcp",
  "version": "1.3.4",
  "description": "Bybit Market Analysis MCP Server",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "clean": "rm -rf build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "docs": "typedoc src/index.ts"
  },
  "keywords": [
    "mcp",
    "bybit",
    "trading",
    "market-analysis"
  ],
  "author": "Bybit MCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.3.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "typedoc": "^0.25.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/examples/**"
    ]
  }
}